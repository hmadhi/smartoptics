<h1>Add/Edit Patient</h1>

   <%= form_for @patient do |patient_form| %>
      
    
   	<%= patient_form.label :patient_number %>   <%= patient_form.text_field :patient_number %>
   	<%= patient_form.label :patient_name %>   <%= patient_form.text_field :patient_name %>
   	 
   	  <br>
    
        <%= patient_form.fields_for @patient.consults.build do |consult_form| %>
         <%= consult_form.label :service_date %>  <%= consult_form.text_field :service_date %>
         <%= consult_form.label :reservation_number %>  <%= consult_form.text_field :reservation_number %>
        <% end %>
        <br>
      <%= patient_form.submit %>
    <% end %>

